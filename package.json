{
    "name": "shoppy-api",
    "version": "2.0.0",
    "description": "A simple wrapper for the shoppy API",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "keywords": [
        "shoppy",
        "api",
        "wrapper"
    ],
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": "https://github.com/KibbeWater/Shoppy-API",
    "author": "KibbeWater",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.2.2",
        "express": "^4.18.2"
    },
    "files": [
        "lib/**/*"
    ],
    "devDependencies": {
        "@babel/preset-typescript": "^7.18.6",
        "@jest/globals": "^29.3.1",
        "@types/express": "^4.17.15",
        "dotenv": "^16.0.3",
        "jest": "^29.3.1",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.4"
    }
}
